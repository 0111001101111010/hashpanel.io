<div class="row">
  <div class="col-lg-6">
    <div role="form" action="/">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" value="{{name}}" placeholder="Server Name">
        </div>
        <div class="form-group">
            <label>Model:</label>
            <input class="form-control" value="{{model}}" placeholder="Server Model">
        </div>
        <div class="form-group">
            <label>Mining Pool</label>
            <select multiple class="form-control">
                <option>NEW</option>
                <option>{{group}}</option>
            </select>
        </div>
        <div class="form-group">
            <label>Server Address</label>
            <input class="form-control" placeholder="ex. 158.0.8.1">
        </div>
        <div class="form-group">
            <label>Power</label>
            <label class="radio-inline">
                <input type="radio" name="optionsRadiosInline" >On
            </label>
            <label class="radio-inline">
                <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline2" >Off
            </label>
        </div>
        <a href="."><button type="Save" class="btn btn-success" id="save" >Save</button></a>
        <button type="Reset" class="btn btn-danger">Cancel</button>
      </div>
      
    <div class="col-lg-6">
      <div class="panel panel-default">
          <div class="panel-heading">
              <i class="fa fa-bell fa-fw"></i> Notifications Panel
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
            <div class="list-group">
             <a href="#" class="list-group-item">
                <i class="fa fa-money fa-fw"></i> Payment Received
                <span class="pull-right text-muted small"><em>Yesterday</em>
                </span>
            </a>
              </div>
              <!-- /.list-group -->
            <a href="#" class="btn btn-default btn-block">View All Alerts</a>
          </div>
          <!-- /.panel-body -->
      </div>
    </div>
    <!-- /.panel -->
</div>
