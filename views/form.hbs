<div class="row">
  <div class="col-lg-6">
    <div role="form" action="/">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" value="{{name}}" placeholder="Server Name">
        </div>
        <div class="form-group">
            <label>Model:</label>
            <input class="form-control" value="{{model}}" placeholder="Server Model">
        </div>
        <div class="form-group">
            <label>Mining Pool</label>
            <select multiple class="form-control">
                <option>NEW</option>
                <option>{{group}}</option>
            </select>
        </div>
        <div class="form-group">
            <label>Server Address</label>
            <input class="form-control" placeholder="ex. 158.0.8.1">
        </div>
        <div class="form-group">
            <label>Power</label>
            <label class="radio-inline">
                <input type="radio" name="optionsRadiosInline" >On
            </label>
            <label class="radio-inline">
                <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline2" >Off
            </label>
        </div>
        <a href="."><button type="Save" class="btn btn-success" id="save" >Save</button></a>
        <button type="Reset" class="btn btn-danger">Cancel</button>
      </div>
    </div>
</div>
