<div class="row">
  <div class="col-lg-6">
    <div role="form" action="/">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" value="{{name}}" placeholder="Server Name">
        </div>
        <div class="form-group">
            <label>Pool</label>
            <input class="form-control" value="{{host}}" placeholder="3J98t1WpEZ73CNmQviecrnyiWrnqRhWNLF">
        </div>
        <div class="form-group">
            <label>Port:</label>
            <input class="form-control" value="{{model}}" placeholder="4321">
        </div>
        <div class="form-group">
            <label>Server Address</label>
            <input class="form-control">
        </div>
        <div class="form-group">
            <label>Power</label>
            <button type="off" class="btn">Power Off</button>
        </div>
        <a href="."><button type="Save" class="btn btn-success" id="save" >Save</button></a>
        <button type="Reset" class="btn btn-danger">Cancel</button>
      </div>
    </div>
    <div class="col-lg-6"  id="server-details">
      <div class="panel panel-default">
          <div class="panel-heading">
              <i class="fa fa-bell fa-fw"></i> Miner Details
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
            <div class="list-group">
             <div href="#" class="list-group-item">
                <span>Device: {{device.name}}
                </span>
                <span>Manufacturer: {{device.manufacturer}}
                </span>
                <span>Hash Rate : {{device.hashRate}} GH/S
                </span>
                <span>CGMiner version: {{state.version.CGMiner}}
                </span>
                <span>API version: {{state.version.API}}
                </span>
              </div>
            </div>
              <!-- /.list-group -->
            <a class="btn btn-default btn-block" id="show-history">View History</a>
            <div id="history" style="display: none;" >

              <div class="list-group">
               <div class="list-group-item">
                 {{history}}
              </div>
             </div>
          </div>
          <!-- /.panel-body -->
      </div>
    </div>
    <!-- /.panel -->
</div>
